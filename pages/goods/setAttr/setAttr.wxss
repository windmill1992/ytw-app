/* public class */
page {
  background-color: #fff;
  font-size: 28rpx;
  color: #444;
}
.rela {
  position: relative;
}
.abs {
  position: absolute;
}


/* 顶部 */
.titleBox {
  margin: 0 auto;
  width: 95%;
  height: 80rpx;
  border-bottom: 4rpx solid #ccc;
}
.titleName {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  color: rgb(53, 49, 49);
  font-weight: bold;
  line-height: 75rpx;
}
.titleBox view {
  flex: 1;
  overflow: hidden;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.titleBorder {
  bottom: -4rpx;
  height: 4rpx;
  width: 238rpx;
  background-color: #ccc;
  transition: all .3s;
}
.titleBorder view {
  margin: 0 auto;
  height: 100%;
  width: 60%;
  background-color: #18c2ba;
}

