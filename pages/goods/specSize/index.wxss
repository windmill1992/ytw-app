page {
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #999;
  background-color: #fff;
}

.plus-wrap {
  position: relative;
  width: 95%;
  height: 95%; }

.plus {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0; 
  border: 1rpx solid rgb(224, 217, 217);
}
  .plus::before {
  content: '';
  position: absolute;
  top: 32%;
  left: 50%;
  height: 60rpx;
  margin-top: -30rpx;
  margin-left: -2rpx;
  border-left: 4rpx solid #cccccc; 
}
  .plus::after {
  content: '';
  position: absolute;
  top: 32%;
  left: 50%;
  width: 60rpx;
  margin-left: -30rpx;
  margin-top: -2rpx;
  border-top: 4rpx solid #cccccc; 
}
.imageNumtips {
  position: absolute;
  bottom: 0rpx;
  left: 50%;
  transform: translateX(-50%);
  height: 35rpx;
  width: 163rpx;
  text-align: center;
  line-height: 35rpx;
  border: none;
  border-radius: 3rpx;
  color: #cccccc;
  font-size: 26rpx;
}
.radio {
  overflow-x: auto;
  white-space: nowrap; 
}

.extra {
  background: #cccccc;
  color: #3F82FD;
  font-size: 24rpx;
  padding: 10rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow: hidden; 
}

