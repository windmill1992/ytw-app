  margin: 0 auto;
  width: 480rpx;
  height: 58rpx;
  line-height: 58rpx;
  color: #fff;
  background-color: #18c2ba;
  border-radius: 29rpx;
  text-align: center;
}

.proposalAge {
  position: relative;
  padding: 0 16px;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  font-size: 28rpx;
  font-weight: 300;
  background-color: #fff;
}
.proposalAge .fll {
