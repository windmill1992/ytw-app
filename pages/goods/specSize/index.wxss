  color: #555;
}
.proposalAge input {
  position: absolute;
  right: 85rpx;
  top: 19rpx;
  padding: 0;
  margin: 0;
  width: 100rpx;
  height: 45rpx;
  text-align: center;
}
.num2Input {
  position: absolute;
  left: 16px;
  top: 50%;
  transform: translateY(-50%);
  width: 130rpx;
  height: 45rpx;
  border: 2rpx solid #18c2ba;
  text-align: center;
