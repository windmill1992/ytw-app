/* =========== */
.sortBtnBox {
  padding: 15rpx 16px;
  padding-right: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #f3fffe;
}
.sortBtn {
  display: inline-block;
  padding: 0rpx 50rpx;
  margin-right: -40rpx;
  height: 48rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #18c2ba;
  line-height: 48rpx;
  border-radius: 24rpx;
}

/* 映射价格、库存部分 */
.attrTitle {
  margin: 15rpx 0;
  padding-left: 16px;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f3fffe;
}
.priceSumItem {
  margin: 15rpx 0;
  padding: 12rpx 35rpx 12rpx 12rpx;
  border: 2rpx solid #18c2ba;
  border-radius: 8rpx;
  box-sizing: border-box;
  text-align: center;
}
.preImgTips {
  flex: 0.8;
  font-size: 28rpx;
}
.priceSumItemImg {
  flex: 1;
}
.xianxianxian {
  flex: 0.4;
  position: relative;
}
.xianxianxian::before {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 1rpx;
  height: 70rpx;
  background-color: #e0d9d9;
}
.xianxianxian2::before {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 1rpx;
  height: 30rpx;
  background-color: #e0d9d9;
}
.itemInfoBox {
  display: flex;
  flex-direction: row;
  line-height: 180rpx;
}
.itemInfoBox image {
  height: 140rpx;
  width: 140rpx;
  vertical-align: middle;
}
.switch {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 1.5;
  line-height: 30rpx;
}
.switchHasGoods {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 50rpx;
}
.priceSumInputs {
  padding: 10rpx 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-top: 1rpx solid #eaeaea;
  font-size: 30rpx;
  color: #555;
}
.priceSumInputs .rela {
  text-align: left;
  color: #555;
}
.priceSumInputs input {
  display: inline-block;
  width: 136rpx;
  box-sizing: border-box;
  padding-right: 45rpx;
  text-align: right;
}
.mapSpecInput {
  right: -20rpx;
  top: -1rpx;
}
.inputAfter::after{
  content: '手';
  position: absolute;
  right: 10rpx;
  top: 0;
}

/* 确定 */
