@import "../../../../utils/wxParse/wxParse.wxss";
.mesg_detail {
    width: 92%;
    height: auto;
    text-align: center;
    padding: 0 4%;
    padding-top: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.mesg_title{
  font-weight: bold
}

.mesg_info {
  color: #999;
  font-size: 9pt;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-content: space-between;
}

.mesg_info text{
  display: block;
  margin: 0 10rpx;
}

.mesg_content{
  margin-top: 20rpx;
  font-size: 11pt;
  color: #333;
  text-align: justify;
  vertical-align: middle
}