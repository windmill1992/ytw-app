
page{
  background-color: #f5f5f5;
}
.logistics_mesg{ 
    width:100%; 
    height:auto; 
    padding-bottom:60rpx;
}
.logistics_items{ 
    width:92%; 
    padding:0 4%;
}
.logistics_items .mesg_time{ 
    line-height:66rpx; 
    padding-top:18rpx; 
    font-size:24rpx; 
    color:#666; 
    text-align:center;
}
.mesg_cont{ 
    width:94%; 
    background-color:#fff; 
    border:1px solid #f3f3f3;
    border-radius: 10rpx; 
    padding:30rpx 3% 0; 
    text-align:left;
}
.mesg_cont .mesg_tit{ 
    font-size:30rpx; 
    color:#333; 
    position:relative; 
    overflow:hidden;
    text-overflow:ellipsis;
    white-space: nowrap; 
    padding-right:30px;
    margin-bottom: 15rpx;
}
.mesg_cont .mesg_tit text{ 
    width:18rpx; 
    height:18rpx; 
    background-color:#ff3b3b; 
    border-radius:50%; 
    position:absolute; 
    right:6rpx; 
    top:6rpx;
}
.mesg_cont .activemesg_img{ 
    width:100%; 
    height:280rpx; 
    position:relative;
    padding-top: 24rpx;
    text-align: center;
}
.mesg_cont .activemesg_img image{
    width:100%;
    height:100%;
   vertical-align: middle;
}
.mesg_cont .mesg_desc{ 
    font-size:24rpx; 
    color:#333; 
    line-height:36rpx; 
    padding:18rpx 6rpx 0;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.mesg_cont .mesg_link{ 
    display:block; 
    width:100%; 
    height:66rpx; 
    line-height:66rpx; 
    padding-top: 24rpx;
    border-top:1px solid #f3f3f3; 
}
.mesg_cont .mesg_link text{
    float: left;
    color:#999; 
    font-size:24rpx; 
}
.mesg_cont .mesg_link image{
    float: right;
    width: 25rpx;
    height: 30rpx;
    margin-top: 18rpx;
}
.mesg_cont .activemesg_img text{ 
    width:100%; 
    height:100%; 
    background-color:rgba(0,0,0,0.6); 
    position:absolute; 
    left:0; 
    top:0; 
    z-index:9; 
    line-height:280rpx; 
    font-size:36rpx; 
    color:#fff; 
    font-weight:bold; 
