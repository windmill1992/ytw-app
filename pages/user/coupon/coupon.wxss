/* coupon.wxss */
.type-navbar{
    white-space: nowrap;
    display: flex;
    width: 100%;
    height:80rpx;
    background-color: #fff;
    color: #333;
    position: fixed;
    top: 0;
}
.coupon-list{
    padding-top: 80rpx;
}
.type-box{
    width:33.3333333333%;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 76rpx;
    padding: 0 20rpx;
    text-align: center;
    display: inline-block;
    overflow: hidden;
}
.type-navbar-item{
    border-bottom: 4rpx solid #fff;
}
.type-item-on{
    border-bottom: 4rpx solid #ff3b3b;
    color: #ff3b3b;
}
.coupon-box{
    box-sizing: border-box;
    width: 365rpx;
    float: left;
    padding: 20rpx 0rpx 0 20rpx;
    font-size: 25rpx;
    height: 522rpx;
}
.coupon-head{
    background-color: #ff3b3b;
    color: white;
    height: 252rpx;
    box-sizing: border-box;
    padding: 70rpx 20rpx 20rpx 20rpx;
    border-bottom:2px solid transparent;
    border-image:none 100% 0 5 repeat;
    border-top-left-radius:10rpx;
    border-top-right-radius:10rpx;
    text-align: center;
}
.coupon-money{
    margin-bottom: 16rpx;
    word-break: keep-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.money{
    font-size: 48rpx;
}
.coupon-body{
    background-color: white;
    padding: 20rpx 20rpx 30rpx;
    color: #999999;
    border-bottom-right-radius:10rpx;
    border-bottom-left-radius:10rpx;
}
.use-btn{
    color: #ff3b3b;
    border: 2rpx #ff3b3b solid;
    width: 250rpx;
    padding: 6rpx 35rpx;
    border-radius: 35rpx;
    margin: 30rpx auto 0;
    box-sizing: border-box;
    text-align: center;
}
.use-end{
    padding: 25rpx 0;
    color: #999999;
    font-size: 28rpx;
}
.line{
    word-break: keep-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    height: 40rpx;
    line-height: 40rpx;
}
.line .left{
  width: 110rpx;
  height: 100%;
  float: left;
}
.line .right{
  width: 160rpx;
  height: 100%;
  color: #333;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.bottom{
  border-bottom: 1rpx solid #f3f3f3;
}
.head-disable{
    background-color: #999999;
}
.btn-disable{
    color: #999999;
    border-color: #999999;
}
