/* comment.wxss */
.container {
    padding-bottom:0rpx;
    background: #f5f5f5;
}
.type-navbar{
    white-space: nowrap;
    display: flex;
    width: 100%;
    height:80rpx;
    background-color: #fff;
}
.type-box{
    width:33.3333333333%;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 80rpx;
    padding: 0 20rpx;
    text-align: center;
    display: inline-block;
    overflow: hidden;
}
.type-navbar-item{
    border-bottom: 4rpx solid #fff;
}
.type-item-on{
  position: relative;
  color:#ff3b3b;
  font-weight: bold;
}
.type-item-on::before{
  content: '';
  display: block;
  bottom: 0;
  position: absolute;
  width: 50rpx;
	height: 5rpx;
	background-color: #ff3b3b;
  left: 76rpx;
}
.goods-container{
    margin: 0rpx 20rpx;
    background-color: #f5f5f5;
    margin-bottom: 20rpx;
}
.goods-box{
    position: relative;
    font-size: 28rpx;
    overflow: hidden;
    margin-top: 20rpx;
    border-radius: 10rpx;
    background: #fff;
}
.goods-img{
    float:left; 
    height: 180rpx;
    width: 180rpx;
}
.goods-desc{
    float:left;
    width: 530rpx;
    padding: 20rpx 25rpx 0 25rpx;
    box-sizing: border-box;
}
.goods-name{
    height: 60rpx;
    line-height: 30rpx;
    overflow: hidden;
    white-space: normal;
    font-size: 26rpx;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    margin-bottom: 10rpx;
}
.buy-time{
    margin-top: 14rpx;
    font-size: 22rpx;
    color: #b3b3b3;
}
.comment-button{
    position: absolute;
    right: 20rpx;
    bottom: 12rpx;
}
.check-evaluate{
  border: solid 1px #f3f3f3;
  color: #1c1c1c;
}
.change-order{
    color: #c2c2c2;
    border: 1rpx solid #f3f3f3;
}
.button-icon{
    height: 26rpx;
    width: 26rpx;
}
.c-specification{
  font-size: 22rpx;
  color: #999999;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}