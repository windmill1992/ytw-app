page{
    background-color: #fff;
}
.container{
    padding: 20rpx 20rpx;
}
.navbar{
    width: 100%;
}
.navbar-box{
    font-size: 30rpx;
    display: inline-block; 
    width:33.333333%;
    box-sizing: border-box;
    text-align: center;
    line-height:85rpx;
}
.navbar-item-on{
    font-size: 35rpx;
    font-weight: bold;
    position: relative;
    color: #ff3b3b;
}
.navbar-item-on:after{
    content:'';
    position: absolute;
    width:40rpx;
    height:8rpx;
    background:linear-gradient(90deg,rgba(255,59,59,1) 0%,rgba(255,115,61,1) 100%);
    border-radius:4rpx;
    left: 50%;
    margin-left: -20rpx;
    bottom: 0rpx;
}
.top-box{
  background: #F0F0F0;
  font-size: 26rpx;
  color: #666666;
  width: 100%;
  padding: 20rpx 0;
  margin-top: 30rpx;
  border-radius: 10rpx;
}
.account-box{
    width: 100%;
    font-size: 28rpx;
    padding: 20rpx 0;
    border-radius: 10rpx;
}
.account-box:nth-child(odd){
    background: #fff;
}
.account-box:nth-child(even){
    background: #FAFAFA;
}
.account-item{
    display: inline-block; 
    width: 33.333333%;
    word-break: keep-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: center;
    color: #666;
}
.account-box .cont{
    color: #808080;
}
.account-box .price{
    color: #808080;
    text-align: center;
}
.account-box .time{
    color: #808080;
}
.account-box .title{
    text-align: center;
}