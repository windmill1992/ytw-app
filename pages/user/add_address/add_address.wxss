page{
    background: #f5f5f5;
}
.item{
    float: left;
    padding: 0 30rpx; 
    width: 100%;
    box-sizing: border-box;
    font-size: 26rpx;
    border-bottom: 1rpx solid #f3f3f3;
    line-height: 100rpx;
    height: 100rpx;
    position: relative;
    color: #999;
}
.item-name{
    float: left;
}
.item-input{
    float: left;
    height: 100rpx;
    width: 450rpx;
    margin-left: 20rpx;
    word-break: keep-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #999;
}
.item-switch{
    float: right;
}
.arrow{
    position: absolute;
    right: 30rpx;
    width: 32rpx;
    height: 32rpx;
    padding-top: 30rpx;
}
.address-btns{
    position: absolute;
    bottom: 80rpx;
    float: left;
    width: 90%;
    padding: 10rpx 0;
}
.delete-btn{
    float: left;
    width: 40%;
    margin:0 10% 0 5%;
    border-radius: 10rpx; 
    color:#fff;
    background-color: #999;
    border:1px solid #f3f3f3;
}
.submit-btn{
    float: left;
    width: 40%;
    background-color: #18c2ba;
    color: white;
    border-radius: 10rpx;
}
.formbox{
  width: 710rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 auto;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.placeholder{
  color: #999;
}
