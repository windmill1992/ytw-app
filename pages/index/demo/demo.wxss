.list{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.list .item{
  width: 250rpx;
  height: 250rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
  background: #fff;
  border-radius: 10rpx;
  color: #000;
  font-size: 28rpx;
}
.img{
  width: 140rpx;
  height: 140rpx;
}
.mask{
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,0.3);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
}
.dialog{
  z-index: 2;
  width: 300rpx;
  height: 100vh;
  position: fixed;
  right: 0;
  top: 0;
  background: #fff;
  overflow-y: scroll;
}
.list1{
  width: 100%;
  height: auto;
  overflow-y: scroll;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.list1 .item{
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
  background: #fff;
  border-radius: 10rpx;
  color: #000;
  font-size: 28rpx;
}
.list1 .item img{
  width: 80rpx;
  height: 80rpx;
}
.list1 .item view{
  width: 100rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}