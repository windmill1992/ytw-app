/* team_order.wxss */
.container{
  padding-top: 80rpx;
}
.type-navbar{
    white-space: nowrap;
    display: flex;
    width: 100%;
    height:80rpx;
    background-color: #fff;
    position: fixed;
    z-index: 99;
    top: 0;
    left: 0;
}
.type-box{
    width:25%;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 76rpx;
    padding: 0 20rpx;
    text-align: center;
    display: inline-block;
    overflow: hidden;
}
.type-navbar-item{
    position: relative;
    border-bottom: 4rpx solid #fff;
}
.type-item-on{
    /* border-bottom: 4rpx solid #ff3b3b; */
    color: #ff3b3b;
}
.type-item-on:after{
    content: '';
    position: absolute;
    width: 50rpx;
    height: 4rpx;
    border-radius: 2rpx;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    background: #ff3b3b;
}
.goods-container{
    display: flex;
    justify-content: space-between;  
    flex-wrap:wrap;
    box-sizing: content-box;
    padding: 20rpx 0;
}
.goods-box{
    background-color: #fff;
    font-size: 28rpx;
    width: 710rpx;
    margin: 0 auto;
    border-radius: 10rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}
.goods-title{
    display: flex;
    justify-content:space-between;
    align-items:center;
    height: 80rpx;
    border-bottom: 1rpx solid #f3f3f3;
    padding: 0 20rpx;
}
.store-logo{
    height: 30rpx;
    width: 30rpx;
    border-radius: 25%;
    margin-right:10rpx;
    vertical-align:top;
    position: relative;
    top: 5rpx;
}
.store-name{
    color: #666;
    font-size: 28rpx;
}
.order-number{
    font-size: 24rpx;
    color: #666;
    margin: 30rpx 0;
    padding: 0 20rpx;
}
.pay-status{
    color:#F39818;
}
.goods-cont{
    padding: 20rpx 0;
    margin: 0 20rpx;
    display: flex;
    justify-content:space-between;
    position: relative;
    border-bottom: 1rpx solid #f3f3f3;
}
.cont-box .goods-cont:last-child{
    border:0;
}
.img-box{
    width: 150rpx;
    height: 150rpx;
    border-radius: 5rpx;
}
.goods-mes{
    width: 500rpx;
}
.goods-mes .top{
    width: 100%;
    height: 90rpx;
    box-sizing: border-box;
}
.goods-mes .top .left{
    width: 330rpx;
    float: left;
    color: #666666;
    margin: 10rpx 0rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    box-sizing: border-box;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.goods-mes .top .right{
    width: 150rpx;
    float: right;
    margin: 10rpx 0rpx;
    color:#999999;
    font-size: 22rpx;
}
.goods-mes .top .right .price{
    height: 40rpx;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: right;
    color: #999999;
}
.goods-mes .top .right .num{
    height: 40rpx;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: right;
}
.goods-mes .bottom{
    color: #999999;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 22rpx;
    white-space: nowrap;
    text-align: left;
    overflow: hidden;
    width: 100%;
    text-overflow: ellipsis;
}
.return-btn{
    color: #999999;
    position: absolute;
    right: 0;
    bottom: 0rpx;
    height: 80rpx;
    line-height: 80rpx;
}
.goods-tips{
    height: 48rpx;
    padding: 15rpx 20rpx;
    display: flex;
    justify-content:space-between;
    align-items:center;
    border-top: 1rpx solid #f3f3f3;
}
.order-total{
    display: flex;
    justify-content:flex-start;
    font-size: 24rpx;
    color: #333;
}
.goods-total{
    margin-right:20rpx;
    color:#ff3b3b;
}
.order-btn{
    width: 150rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    margin-left: 20rpx;
    float: right;
    border-radius: 5rpx;
    background: #FF3B3B;
    color: #fff;
    font-size: 24rpx;
    border: 1rpx solid #FF3B3B;
    box-sizing: border-box;
}
.order-btn-pay{
    color: #fff;
    background-color:#18c2ba;
    border-color:#18c2ba;
}
.cancel-btn{
    width: 150rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    margin-left: 20rpx;
    float: right;
    border-radius: 5rpx;
    background: #fff;
    color: #999999;
    font-size: 24rpx;
    border: 1rpx solid #E6E6E6;
    box-sizing: border-box;
}
.countbox{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: right;
  padding: 0 20rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 20rpx;
}
.countbox .all{
  font-size: 24rpx;
  color: #999999;
  margin-left: 15rpx;
}
.countbox .word{
  font-size: 24rpx;
  color: #666666;
  margin-left: 15rpx;
}
.countbox .money{
  color: #ff3b3b;
  font-size: 28rpx;
  margin-left: 15rpx;
  font-weight: 600;
}
.shipping{
  font-size: 24rpx;
  font-weight: 500;
}
