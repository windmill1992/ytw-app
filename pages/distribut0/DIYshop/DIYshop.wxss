.bgImg {
  width: 750rpx;
  height: 400rpx;
  vertical-align: middle;
}
page {
  line-height: 35rpx;
  color: #444;
  background-color: #fff;
}
.setContent {
  background-color: #f5f5f5;
  padding-bottom: 1px;
}
.theme {
  color: #18c2ba;
}
.s30 {
  font-size: 30rpx;
}
.fw600 {
  font-weight: bold;
}
.pdlr {
  padding: 15rpx 18rpx 15rpx 30rpx;
  box-sizing: border-box;
}
.flx1 {
  flex: 1;
  padding-left: 20rpx;
  padding-right: 30rpx;
  text-align: right;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  box-sizing: border-box;
  color: #777;
  font-size: 28rpx;
}
.setTit {
  margin: 8px auto;
  background-color: #fff;
}
.setItem {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fff;
}
.setModifyImg {
  height: 40rpx;
  width: 40rpx;
}
.afterLine::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 0;
  border-top: 1rpx solid #ccc;
}
.radioBox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 8px 0;
  background-color: #fff;
}
.setRadio {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.radioL,.radioR {
  margin-right: 30rpx;
  font-size: 28rpx;
}
.radioRound {
  position: relative;
  display: inline-block;
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #555;
  vertical-align: middle;
  margin-right: 12rpx;
  box-shadow: 0 0 3rpx #555;
}
.radioRoundCurrent::after {
  content: '';
  position: absolute;
  width: 60%;
  height: 60%;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  border-radius: 50%;
  background-color: #18c2ba;
  box-shadow: 0 0 3rpx #18c2ba;
}
.detailAddress {
  flex: 1;
  text-align: right;
  box-sizing: border-box;
  padding-right: 60rpx;
  color: #777;
  font-size: 28rpx;
  z-index: 0;
}

/* 弹出的 */
.modifyPopup {
  position: relative;
  width: 560rpx;
  height: 250rpx;
}
.modifyT {
  text-align: center;
  margin: 30rpx 0;
  font-weight: bold;
  font-size: 34rpx;
  color: #333;
}
.modifyInput {
  width: 80%;
  margin: 0 auto;
  border: 1rpx solid #ccc;
  padding: 15rpx;
  text-indent: 1em;
}
.modifyBtns {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 80rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #ddd;
  line-height: 80rpx;
  text-align: center;
}
.borderL {
  flex: 1;
  box-sizing: border-box;
  border-right: 1rpx solid #ddd
}
.borderR {
  flex: 1;
  color: #18c2ba
}


