<!-- 修改备注 -->
<van-dialog
  use-slot
  id="van-dialog"
>
  <input hidden="{{ !showInput }}" placeholder-style="color: #fff;text-align: center;" class="editInput" focus="true" value="{{ editName }}" bindinput="editInputChange" placeholder="请输入备注"></input>
</van-dialog>


