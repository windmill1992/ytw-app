page {
  font-size: 30rpx;
  color: #555;
  background-color: #fff;
  padding-bottom: 100rpx!important;
}

.list{
  padding-top: 20rpx!important;
  padding-bottom: 20rpx;
  width: 95%!important;
  height: auto;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
}

.coreSumItemBox {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  height: auto;
}
.coreSumItem {
  margin: 5rpx 0;
  width: 50%;
}
.reFresh {
  right: 25rpx;
  top: 25rpx;
  height: 45rpx;
  width: 120rpx;
  text-align: center;
  line-height: 45rpx;
  border-radius: 22rpx;
  background-color: #18c2ba;
  color: #fff;
}


.screenSearch {
  padding-right: 20rpx;
  margin: 20rpx 0;
  height: 60rpx;
}
.showScreen {
  display: block;
  left: 55rpx;
  top: 0;
  height: 50rpx;
  width: 200rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
}
.screenSearchItemBox {
  padding: 10rpx 15rpx;
  background-color: #eec4c8;
  color: #fff;
  left: 20rpx;
  top: 60rpx;
  width: 300rpx;
  height: auto;
  border-radius: 15rpx;
  z-index: 3;
  text-align: center;
}
.screenSearchItem {
  border-bottom: 1rpx solid rgb(72, 218, 184);
  height: 55rpx;
  line-height: 55rpx;
}
.hoverScreenItem {
  color: #f10125;
}
.searchBox {
  text-align: right;
  padding: 0 20rpx 0 0;
  line-height: 50rpx;
  
}
.search {
  right: 110rpx;
  top: 0rpx;
  display: inline-block;
  width: 170rpx;
  height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
  border: 1rpx solid #ccc;
}
.hoverSearch {
  background-color: #aa9496;
}

/* 底部Tab */
.bottomTab {
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  left: 0;
  bottom: 0;
  padding: 15rpx 28rpx;
  height: 80rpx;
  width: 750rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  background-color: #fff;
  color: #fff;
  z-index: 104;
}
.bottTabItem {
  position: relative;
  width: 120rpx;
  border-radius: 10rpx;
  text-align: center;
  background-color: #ff8282;
  font-size: 22rpx;
}
.hoverBottTabItem {
  box-shadow: 0 0 5rpx rgba(0, 0, 0, .5);
}
.ignoreItem {
  top: -34rpx;
  left: 280rpx;
  height: 30rpx;
  padding: 2rpx 12rpx;
  line-height: 30rpx;
  background-color: #8f6f6f;
  color: #fff;
  border-radius: 15rpx 15rpx 0 0;
  font-size: 24rpx;
}
.orderItem {
  height: 118rpx!important;
}
.orderInfoL {
  position: relative;
}
.orderInfoL::after {
  content: '';
  position: absolute;
  right: 5rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 60rpx;
  background-color: #e9e9e9;
}
/* 底部  其他 */
.otherOpera {
  position: fixed;
  right: -999px;
  bottom: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 200rpx;
  height: 300rpx;
  background-color: #fff;
  border-radius: 30rpx;
  text-align: center;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .5);
  transition: all linear .3s;
  overflow: hidden;
}
.otherOpera text {
  color: gold;
  font-size: 28rpx;
  padding: 15rpx 0;
}

/* 仓位余量详情 */
.sumsInfo {
  position: fixed;
  bottom: 150rpx;
  left: 10rpx;
  padding: 15rpx 25rpx 15rpx 15rpx;
  width: 500rpx;
  height: 200rpx;
  border: 2rpx solid #555;
  border-radius: 30rpx;
  box-sizing: border-box;
  z-index: 105;
  transition: all .3s linear;
  background-color: #fff;
}
.numsScroll {
  height: 100%;
  width: 100%;
  white-space: nowrap;
}
.numsItem {
  display: inline-block;
  margin: 0 15rpx;
  padding: 10rpx;
  background-color: #e1e1e1;
  border-radius: 15rpx;
  font-size: 28rpx;
}
.closeNums {
  position: absolute;
  right: -74rpx;
  padding: 5rpx;
  bottom: 5rpx;
  display: inline-block;
  color: #f10215;
  background-color: #ff8282;
  border-radius: 8rpx;
  font-size: 26rpx;
}
